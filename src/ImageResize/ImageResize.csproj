        <Nullable>enable</Nullable>
        <LangVersion>default</LangVersion>
        <Company>Timick</Company>
        <AssemblyVersion>2.0</AssemblyVersion>
        <FileVersion>2.0</FileVersion>
        <NeutralLanguage>en</NeutralLanguage>
